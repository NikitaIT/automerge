{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext.asynciterable", "es2017", "es2016", "es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "paths": { "*": ["src/*", "*", "frontend/*", "backend/*"] },
    "rootDir": "",
    "target": "es2016",
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "exclude": ["dist/**/*"]
}
